@* @model BackEnd_S5_L1.Models.Entity.Product *@
@model List<BackEnd_S5_L1.Models.Entity.Product>

@{
}


<h1 class="text-white text-center">Add Book</h1>

<form asp-controller="Product" asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label text-white">Titolo</label>
        <input type="text" class="form-control" name="Titolo">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Autore</label>
        <input type="text" class="form-control" name="Autore">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Prezzo</label>
        <input type="number" step="0.01" class="form-control" name="Prezzo">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Copertina</label>
        <input type="text" class="form-control" name="Copertina">
    </div>

    <div class="mb-3">
        <label class="form-label text-white">Descrizione</label>
        <input type="text" class="form-control" name="bookSummary">
    </div>

    <button type="submit" class="bg-dark text-white fw-bold px-4 py-2">Add Book</button>

</form>

}



@* table to update *@

<table class="table mt-4">
    <thead>
        <tr class="text-white bg-dark text-center">
            <th scope="col">Copertina</th>
            <th scope="col">Titolo</th>
            <th scope="col">Autore</th>
            <th scope="col">Prezzo</th>
            <th scope="col">Trama</th>
            <th scope="col">Modifica</th>
            <th scope="col">Cancella</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var update in Model)
        {

            <tr class="text-white bg-dark">
                <td>
                    <img src="@update.Copertina" alt="@update.Titolo" style="width:100px; height:auto;" />
                </td>
                <td>@update.Titolo</td>
                <td>@update.Autore</td>
                <td>@update.Prezzo</td>
                <td>@update.bookSummary</td>
                <td class="text-center">
                    <a>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
