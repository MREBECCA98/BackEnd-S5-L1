@{
}


<h1 class="mb-4 text-white text-center">Book List</h1>

<div class="container">
    <div class="row">
        @foreach (var product in ViewBag.Products)
        {
            <div class="col-md-4 mb-3">
                <div class="card bg-dark text-white" ">
                    <img class="cardImgIndex card-img-top"
                         src="@product.Copertina" alt="@product.Titolo" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Titolo</h5>
                        <p class="card-text">@product.Autore</p>
                        <div class="dropdown mb-3">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Description
                            </button>
                            <ul class="dropdown-menu bg-secondary p-2 ">
                                <p class="card-text text-white">@product.bookSummary</p>
                            </ul>
                        </div>


                        <p class="card-text">@product.Prezzo €</p>
                        <div>
                            <button type="submit" class="bg-dark text-white fw-bold px-4 py-2">Loan</button>
                            @foreach (var user in ViewBag.Users)
                            {
                                @* <input type="hidden" name="UserId" value="@user.Id" /> *@
                            }
                            )
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
